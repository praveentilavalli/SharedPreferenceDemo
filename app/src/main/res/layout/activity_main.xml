<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#D3DaE5"
    android:orientation="vertical"
    tools:context="com.example.adityacomputers.sharedpreferencedemo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsettings"
        android:text="SETTINGS"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#797a7c"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/password"/>
    <TextView
        android:id="@+id/txtpassword"
        android:text="Set Your password"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Settings"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#797a7c"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slock"
        android:text="Screen Lock"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:id="@+id/chkslock"
        android:layout_marginLeft="320dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock the screen with password"
        android:layout_marginBottom="30dp"
        android:id="@+id/txtslock"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remainder For Updation"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/remainder"/>
    <TextView
        android:id="@+id/txtremainder"
        android:text="Set Update Remainder Frequency"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
